  <h1>„ÉÅ„É£„ÉÉ„Éà„Éù„Éº„Éà„Éï„Ç©„É™„Ç™üíß</h1>

  <div id="login">
    <input type="text" id="nicknameInput" placeholder="„Éã„ÉÉ„ÇØ„Éç„Éº„É†„ÇíÂÖ•Âäõ" />
    <button onclick="setNickname()">ÂèÇÂä†„Åô„Çã</button>
    <p id="loginError"></p>
  </div>

  <div class="chat" id="chat" style="display:none;"></div>
  <input type="text" id="userInput" placeholder="„É°„ÉÉ„Çª„Éº„Ç∏„ÇíÂÖ•Âäõ..." style="display:none;" />
  <button onclick="sendMessage()" id="sendBtn" style="display:none;">ÈÄÅ‰ø°</button>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    let nickname = "";
    let myIcon = "";

    function setNickname() {
      const input = document.getElementById("nicknameInput");
      nickname = input.value.trim();
      if (!nickname) return;

      socket.emit("set nickname", nickname);
    }

    socket.on("nickname accepted", (icon) => {
      myIcon = icon;
      document.getElementById("login").style.display = "none";
      document.getElementById("chat").style.display = "flex";
      document.getElementById("userInput").style.display = "block";
      document.getElementById("sendBtn").style.display = "block";
    });

    socket.on("nickname rejected", () => {
      document.getElementById("loginError").textContent = "„Åì„ÅÆ„Éã„ÉÉ„ÇØ„Éç„Éº„É†„ÅØ‰Ωø„Åà„Åæ„Åõ„ÇìÔºÅ";
    });

    socket.on("banned", () => {
      alert("„ÅÇ„Å™„Åü„ÅØBAN„Åï„Çå„Å¶„ÅÑ„Åæ„Åô„ÄÇ");
      location.reload();
    });

    function sendMessage() {
      const input = document.getElementById("userInput");
      const message = input.value.trim();
      if (!message) return;

      socket.emit("chat message", { nickname, message });
      input.value = "";

      addBubble(nickname, myIcon, message, true);
    }

    socket.on("chat message", ({ nickname, icon, message }) => {
      addBubble(nickname, icon, message, false);
    });

    function addBubble(name, icon, text, isUser) {
      const bubble = document.createElement("div");
      bubble.className = `bubble ${isUser ? "user" : "bot"}`;
      bubble.textContent = `${icon} ${name}: ${text}`;
      document.getElementById("chat").appendChild(bubble);
      document.getElementById("chat").scrollTop = chat.scrollHeight;
    }
  </script>
